<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Log In</title>
  </head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <%= form_tag '/login' do %>
          <h2>Log In</h2>
          <hr class="colorgraph">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="form-group">
                <%= label_tag :mail %>
                <%= text_field_tag :mail%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password%>
              </div>
            </div>
          </div>
          <hr class="colorgraph">
            <div class="row">
              <%= submit_tag 'Login', class: "btn btn-success" %>
            </div>
        <% end %>
        <%= link_to "<< AtrÃ¡s", root_path %>
      </div>
    </div>
  </div>
</body>
